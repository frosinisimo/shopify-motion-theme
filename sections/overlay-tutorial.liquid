<script>
document.addEventListener('DOMContentLoaded', function() {
  const sectionId = '{{ section.id }}';
  const overlay = document.getElementById(`pr-tutorial-overlay-${sectionId}`);
  const popup = overlay.querySelector('.pr-tutorial-popup');
